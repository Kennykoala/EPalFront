    @*抓到使用者登入的cookie資訊*@
    @{
        var memberService = new Build_School_Project_No_4.Services.MemberService();
        var ProfileEpalService = new Build_School_Project_No_4.Services.ProfileEpalService();

        HttpCookie cookie = HttpContext.Current.Request.Cookies.Get(FormsAuthentication.FormsCookieName);

        string userid = "";
        string avatar = "";
        int? status = 1;

        int followers = 0;
        int followings = 0;
        int likes = 0;
        int matches = 0;

        if (cookie != null)
        {
            FormsAuthenticationTicket ticket = FormsAuthentication.Decrypt(cookie.Value);

            var obj = Json.Decode<Members>(ticket.UserData);
            userid = obj.MemberId.ToString();
            avatar = memberService.GetEditProfileInfo(obj.MemberId).ProfilePicture;
            status = memberService.GetStatus(obj.MemberId).LineStatusId;

            followings = ProfileEpalService.GetSideMenuAccount(obj.MemberId)[0];
            followers = ProfileEpalService.GetSideMenuAccount(obj.MemberId)[1];
            likes = ProfileEpalService.GetSideMenuAccount(obj.MemberId)[2];
            matches = ProfileEpalService.GetSideMenuAccount(obj.MemberId)[3];
        }
    }



