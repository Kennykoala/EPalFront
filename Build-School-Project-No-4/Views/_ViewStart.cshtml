@*2021/9/18:layout登入前後共用，僅區分為有footer(_Layout)、沒有footer(_Layout_nofooter)*@

@{
    string ActionName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);
    switch (ActionName)
    {
        case "HomePage":
        case "RecommenedController":
        case "ChatForPhonePage":
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout_nofooter.cshtml";
            break;
    }
}






