@*2021/9/12修改為利用Action名稱區分layout套用的版型*@
@{
    string ActionName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Action"]);
    switch (ActionName)
    {
        case "HomePage":
            Layout = "~/Views/Shared/_Layout_beforelogin.cshtml";
            break;
        case "ePal":
        case "Meet":
        case "Live":
        case "BecomeEPalPage":
        case "Page404":
            Layout = "~/Views/Shared/_Layout_nofooter.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}



