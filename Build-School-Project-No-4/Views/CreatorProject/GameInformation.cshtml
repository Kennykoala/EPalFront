                                        <div class="upload_icon">
                                            <img src="~/Assets/images/GameInformation/addpic.png" alt="">
                                        </div>
                                        <i class="delAvatar fa fa-times-circle-o" title="delete"></i>
                                    </label>
                                </div>
                                <br>
                            </div>
                            <br>
                        </div>

                        <div class="screenVideos">

                            <div style="display: flex;
                            justify-content: space-between;    align-items: center;">
                                <div class="svTitle">Screenshots or Videos</div>
                                <a href="@Url.Action("Rule_ScreenshotRules","CreatorProject")">Rule &raquo;</a>
                            </div>
                            <p class="svDesc">
                                Showcase your skills by uploading a screenshot or video clip.
                            </p>

                            <div class="svContainer">
                                <div class="wrapper">
                                    <div class="mb-3">
                                        <label class="bordersize upload_cover">
                                            <input id="upload_input" type="file">
                                            <div class="upload_icon">
                                                <img src="~/Assets/images/GameInformation/addpic.png"
                                                     alt="">
                                            </div>
                                            <i class="delAvatar fa fa-times-circle-o" title="delete"></i>
                                        </label>
                                    </div>
                                </div>

                                <!-- Button trigger modal -->
                                <div class="wrapper2">
                                    <div class="mb-3">
                                        <label class="bordersize upload_cover">
                                            <input id="upload_input" type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                   data-bs-target="#exampleModal">
                                            <div class="upload_icon">
                                                <img src="~/Assets/images/GameInformation/addvideo.jpg"
                                                     alt="">
                                            </div>
                                            <i class="delAvatar fa fa-times-circle-o" title="delete"></i>
                                        </label>
                                    </div>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1"
                                     aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Video</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input id="shareLink" class="shareLink" type="text" autocomplete="off" placeholder="Paste YouTube share link">
                                                <p>Upload your gaming videos in the Community as an ePal will increase your orders.</p>
                                                <a href="#">How to find YouTube share link?</a>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                        data-bs-dismiss="modal">
                                                    Cancel
                                                </button>
                                                <button type="button" class="btn btn-primary">Confirm</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="formLine"></div>

                        <!-- footer -->
                        <div class="footer">
                            <div class="buttonWrapper">
                                <div class="preButtonWrapper">
                                    <button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("BasicInformation","CreatorProject")'">Previous</button>
                                </div>
                                <div class="nextButtonWrapper">
                                    <button type="button" class="btn btn-outline-dark" onclick="location.href='@Url.Action("CreatorProject","CreatorProject")'">Submit</button>
                                </div>
                            </div>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked"
                                           checked>
                                    <label class="form-check-label" for="flexCheckChecked">
                                        By clicking submit button, you are indicating that you have read and
                                        acknowledge
                                        the <a href="https://policies.epal.gg/epal.html?theme=dark">
                                            E-Pal Platform Agreement
                                        </a> .
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>

        // multipleCancelButton
        $(document).ready(function () {
            var multipleCancelButton = new Choices('#choices-multiple-remove-button', {
                removeItemButton: true,
                maxItemCount: 17,
                searchResultLimit: 17,
                renderChoiceLimit: 17
            });
        });

        // modelcard
        var myModal = document.getElementById('myModal')
        var myInput = document.getElementById('myInput')

        myModal.addEventListener('shown.bs.modal', function () {
            myInput.focus()
        })

    </script>

</body>


