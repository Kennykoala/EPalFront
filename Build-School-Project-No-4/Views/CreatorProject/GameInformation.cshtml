<body style="background-color: #120E1B;">

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
            crossorigin="anonymous"></script>


    <!-- epalPage3 -->
    <div class="epalPage3">
        <div class="page3Wrapper">
            <div class="content">
                <div class="title">Game Information ( 3/3 )</div>

                <!-- page3Loading -->
                <div class="page3Loading">
                    <div class="page3Container">
                        <div class="addForm">
                            <p class="desc">
                                The information you submit will not be disclosed to third parties, and we
                                promise to keep your information absolutely confidential.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- form -->
                <div class="formWrapper">
                    <div class="formMain">

                        <!-- State -->
                        <p>Rank</p>
                        <select autocomplete=off class="form-select" aria-label="Default select example">
                            <option selected class="stateSelect">Please select rank</option>
                            <option value="1">Iron</option>
                            <option value="2">Bronze</option>
                            <option value="3">Silver</option>
                            <option value="4">Gold</option>
                            <option value="5">Platinum</option>
                            <option value="6">Diamond</option>
                        </select>

                        <!-- Server(s) -->
                        <p>Server(s)</p>
                        <div class="row d-flex justify-content-center mt-100">
                            <div class="col-md-6">
                                <select id="choices-multiple-remove-button" placeholder="Please select servers"
                                        multiple>
                                    <option value="1">OCE</option>
                                    <option value="2">NA</option>
                                    <option value="3">LAN</option>
                                    <option value="4">BR</option>
                                    <option value="5">EU West</option>
                                    <option value="6">EU North East</option>
                                    <option value="7">RU</option>
                                    <option value="8">TR</option>
                                    <option value="9">CN</option>
                                    <option value="10">TW</option>
                                    <option value="11">JP</option>
                                    <option value="12">KR</option>
                                    <option value="13">SG</option>
                                    <option value="14">VN</option>
                                    <option value="15">TH</option>
                                    <option value="16">PH</option>
                                    <option value="17">LAS</option>
                                </select>
                            </div>
                        </div>

                        <!-- Position(s) -->
                        <p>Position(s)</p>
                        <div class="row d-flex justify-content-center mt-100">
                            <div class="col-md-6">
                                <select id="choices-multiple-remove-button" placeholder="Please select positions"
                                        multiple>
                                    <option value="1">Top</option>
                                    <option value="2">Jungle</option>
                                    <option value="3">Mid</option>
                                    <option value="4">ADC</option>
                                    <option value="5">Support</option>
                                </select>
                            </div>
                        </div>

                        <!-- Style(s) -->
                        <p>Style(s)</p>
                        <div class="row d-flex justify-content-center mt-100">
                            <div class="col-md-6">
                                <select id="choices-multiple-remove-button" placeholder="Please select styles" multiple>
                                    <option value="1">Love inting</option>
                                    <option value="2">Try hard</option>
                                    <option value="3">Hard stuck</option>
                                    <option value="4">Sneaky</option>
                                    <option value="5">Global Presence</option>
                                    <option value="6">One Shot</option>
                                    <option value="7">Pueler</option>
                                    <option value="8">Mobility</option>
                                </select>
                            </div>
                        </div>

                        <!-- Platform(s) -->
                        <p>Platform(s)</p>
                        <select autocomplete=off class="form-select" aria-label="Default select example">
                            <option selected class="stateSelect">Please select platforms</option>
                            <option value="1">PC</option>
                        </select>

                        <div class="formLine"></div>

                        <div class="intro">
                            <div class="introTitle">Introduction</div>
                            <p class="introDesc">
                                The first 1 or 2 sentences of your introduction will be displayed on
                                your ePal cover card.
                            </p>

                            <div class="form-floating">
                                <textarea class="form-control" placeholder="You need at least 10 characters here, for example:
[LoL] I am a god in League, 1 free order for you if you beat me solo mid
[PUBG] Chicken dinner every night. Tip me if we win, or I will sing you a song if we lose
[CS:GO] Pretty legendary in Hide and Seek maps. Will make the order free if you can find me in 10 minutes.
[WoW] Let's run across the map on barefoot at level 1. NO CHEATING
[Fortnite] Let's build the tallest building in the world" id="floatingTextarea2"></textarea>
                            </div>
                        </div>

                        <div class="voiceRecord">
                            <div style="display: flex;
                            justify-content: space-between;    align-items: center;">
                                <div class="voiceTitle">Voice Recording</div>
                                <a href="@Url.Action("Rule_VoiceRecord","CreatorProject")">Rule &raquo;</a>
                            </div>
                            <p class="voiceDesc">
                                Record a 3-15 second audio clip based on our recommendations
                                <br>We will rate your Voice Recording based on what the clients prefer.
                            </p>
                        </div>

                        <div class="listCover">
                            <div style="display: flex;
                            justify-content: space-between;    align-items: center;">
                                <div class="coverTitle">List Cover</div>
                                <a href="@Url.Action("Rule_ListCover","CreatorProject")">Rule &raquo;</a>
                            </div>
