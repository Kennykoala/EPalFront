@model IEnumerable<MemberViewModel>
@{
    ViewBag.Title = "ReadMember";
}

<h2>ReadMember</h2>

<div class="jumbotron alert-success">
    <h3>Member資料表</h3>
</div>


<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>會員代號</th>
            <th>會員姓名</th>
            <th>會員生日</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => m.MemberId)</td>
                <td>@Html.DisplayFor(x => m.MemberName)</td>
                <td>@Html.DisplayFor(x => m.BirthDay)</td>
            </tr>
        }
    </tbody>
</table>
