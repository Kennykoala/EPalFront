@model CategoryViewModel
<div>
    <div class="navBar "></div>
    <div class="container-fulid main">
        <div class="main-Header">
            <div class="main-Box">
                <div class="row">
                    <div class="header-Title col-12">
                        <span>Discounts</span>
                    </div>
                    <div class="header-Select col-12">
                        <div class="select-Box">
                            <select>
                                @foreach (var m in Model.GameAll)
                                {
                                    <option value="@m.GameId">@m.GameName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="main">
            <div class="row main-Card-Area">
            </div>
            <template id='cardCreator'>
                <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 my-3">
                    <div class="item-Card">
                        <a href="..." id="card">
                            <div class="card">
                                <div class="card-Head">
                                    <div class="head-Person-Pic">
                                        <img src="" alt="">
                                        <div class="head-Status">
                                            <div class="status-Pic">
                                                <img src="" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-Body">
                                    <div class="user-Info">
                                        <div class="user-Info-Name">
                                            <span></span>
                                        </div>
                                        <div class="uesr-Info-Icon">
                                            <img src="https://res.cloudinary.com/drh5ybnss/image/upload/v1632637505/Independent%20Study/OtherPhoto/Level_db9q6b.jpg"
                                                 alt="">
                                        </div>
                                    </div>
                                    <div class="user-Title">
                                        <div class="user-Title-Item">
                                            <span></span>
                                            <span></span>
                                        </div>
                                    </div>
                                    <div class="user-Voice">
                                        <div class="voice-Left">
                                            <span class="w-15"></span>
                                            <span class="w-10"></span>
                                            <span class="w-15"></span>
                                        </div>
                                        <div class="voice-Right">
                                            <i class="fas fa-play"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-Footer">
                                    <div class="footer-Discound">
                                        <p>1st ORDER FREE</p>
                                    </div>
                                    <div class="footer-Price">
                                        <div class="price">
                                            <div class="price-Icon">
                                                <img src="https://res.cloudinary.com/drh5ybnss/image/upload/v1632637598/Independent%20Study/OtherPhoto/Icon2_w7mcnt.jpg"
                                                     alt="">
                                            </div>
                                            <div class="price-Text">
                                                <p>
                                                    <span class="price-Span"></span>.00/G
                                                </p>
                                            </div>
                                        </div>
                                        <div class="rate">
                                            <div class="rate-Icon">
                                                <i class="fas fa-star"></i>
                                            </div>
                                            <div class="rate-Text">
                                                <p>5.0<span>(85)</span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </template>
        </div>
    </div>
</div>
