@section endJS{
    <script>
        let row = document.querySelector('.main-Card-Area');
          //Create ProductCards

       


        var select = document.querySelector('.select-Box select');

        select.addEventListener('change', (event) => {
            var lastId = event.target.value;

            axios.get(`/api/jsonapi/${lastId}`)
                .then(function (response) {
                    row.innerText = "";
                    let CardArray = JSON.parse(response.data).ProductCards

                    //sideBar
                    CardArray.forEach(x => {
                        CreateProducts(x)
                    })
                })
                .catch(ex => {
                    console.log(ex)
                })
        })
        var lastId = select.options[select.selectedIndex].value;

        axios.get(`/api/jsonapi/${lastId}`)
            .then(function (response) {
                row.innerText = "";
                let CardArray = JSON.parse(response.data).ProductCards

                //sideBar
                CardArray.forEach(x => {
                    CreateProducts(x)
                })
            })
            .catch(ex => {
                console.log(ex)
            })

        function CreateProducts(item) {
            let card = document.querySelector('#cardCreator')
            let cloneContent = card.content.cloneNode(true);
            cloneContent.querySelector('.item-Card a').href = '@Url.Action("DetailPage","ePals", new {id = "ID"})'.replace("ID", item.ProductId);
            cloneContent.querySelectorAll('.user-Title-Item span')[0].innerText = item.Rank;
            cloneContent.querySelectorAll('.user-Title-Item span')[1].innerText = item.Position;
            cloneContent.querySelector('.head-Person-Pic img').src = item.CreatorImg;
            cloneContent.querySelector('.status-Pic img').src = item.LineStatus;
            cloneContent.querySelector('.user-Info-Name span').innerText = item.CreatorName;
            cloneContent.querySelector('.price-Span').innerText = item.UnitPrice;
            row.appendChild(cloneContent);
        }
    </script>
}