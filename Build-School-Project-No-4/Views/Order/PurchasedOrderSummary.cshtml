                                    <div class="rounds greyish">@Html.DisplayFor(x => m.Quantity) round(s) total</div>
                                    <div class="start-time greyish">
                                        @Html.DisplayFor(x => m.OrderDate)
                                    </div>
                                </div>
                                <div class="order-total">
